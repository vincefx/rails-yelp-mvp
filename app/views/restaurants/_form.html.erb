<%= simple_form_for(@restaurant) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number %>
    <%= f.input :category, as: :select, collection: Restaurant::CATEGORIES %>
  </div>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
